<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col s12 m4 l3">
  <% if user_signed_in? %>
    <div class="card-panel">
      <div class="chips">
        <img class="circle profile" src="/assets/profile.jpeg">
      </div>
      <div>
        <p><%= current_user.name %></p>
        <p><%= current_user.email %></p>
      </div>
      <div>
        <p>Projects</p>
        <p><%= current_user.projects.count %></p>
      </div>
      <div>
        <p>ShoutOuts</p>
        <p><%= %></p>
      </div>
      
    </div>
  <% end %>
  </div>

  <div class="col s12 m4 l5">
    <% @projects.each do |project| %> 
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator project-thumbnail" src="/assets/barista-thumb.jpeg">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4 title"><%= project.title %><i class="material-icons right">more_vert</i></span>
        <div class="card-action">
          <% if user_signed_in? && current_user.id == project.user_id%>
          <a><%= link_to 'Show', project %></a>
          <a><%= link_to 'Edit', edit_project_path(project) %></a>
          <a><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></a>
          <% end %>
        </div>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= project.title %><i class="material-icons right">close</i></span>
          <p><%= project.description %></p>
        </div>
      </div>
    <% end %>
  </div>


  <div class="col s12 m4 l3">
    <div class="card-panel">
    </div>
  </div>
</div>
