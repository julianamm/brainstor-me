<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description.html_safe %>
</p>

<p>
  <strong>Thumbnail:</strong>
  <%= @project.thumbnail %>
</p>

<p>
  <strong>Team members:</strong>
  <% @project.users.each do |member| %>
    <% if member.photo.nil? %>
    <div>
      <img class="circle avatar-small" src="/assets/default-avatar.png">
    </div>
    <p>@<%=  member.username %></p>
    <% else %>
    <div>
      <img class= "circle avatar-small" src="<%= member.photo %>">
    </div>
    <p>@<%=  member.username %></p>
  <% end %>
  <% end %>
</p>

<div>
  <strong>Images:</strong>
  <% if @project.image.attached? %>
  <% @project.image.each do |img| %>
    <%= image_tag img.variant(resize: "500x500") %>
  <% end %>
  <% end %>
</div>

<%= form_for(@project) do |f| %>
<%= f.file_field :image, multiple: true %><br>
<%= f.submit "Submit"%>
<% end %>


<h2>Notes</h2>

<%= form_for [@project, @note] do |f| %>
  <%= f.text_area :body, id: "froala-editor", input_html: { cols: 60, row: 6, placeholder: "What are your thoughts?" } %>
  <%= f.submit "Submit", class: 'btn' %>
<% end %>

<section class="answer-list">
  <% @notes.each do |note| %>
    <div>
    <%= note.body.html_safe %> <br />
    </div>
 

  <% if user_signed_in? %>
    <small>
      <%= link_to("Delete", project_note_path(@project, note), class: "btn", data: { id: note.id }, method: :delete) %>
    </small>
    â€¢
  <% end %>
    <small>
      Posted <%= time_ago_in_words(note.created_at) %> ago
    </small>
 <% end %>

