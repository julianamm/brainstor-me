
<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
  <div class="row">
    <div class="col s12">
        
      <div class="card-panel center">
        <div class="input-field col s12">
          <%= form.label :title, for:"title" %>
          <%= form.text_field :title, class: "validate", id: "title" %>
        </div>

        <div class="input-field col s12">
          <%= form.label :description, for: "description" %>
          <%= form.text_area :description, class: "validate materialize-textarea", id: "description" %>
        </div>

        <div class="input-field col s12">
          <%= form.label :thumbnail, for: "thumbnail" %>
          <%= form.text_field :thumbnail, class: "validate", id: "thumbnail" %>
        </div>

        <div class="input-field col s12">
          <%= form.label :location, for: "location" %>
          <%= form.text_field :location, class: "validate", id: "location" %>
        </div>

        <div class="input-field col s12">
          <%= form.label :deadline, for: "deadline" %>
          <%= form.datetime_select :deadline, class: "datepicker", id: "deadline" %>
        </div>

        <div class="input-field col s12">
          <%= form.label :highlights, for: "highlights" %>
          <%= form.text_area :highlights, class: "validate materialize-textarea", id: "highlights" %>
        </div>

        <div class="input-field col s12">
          <%= form.label :results, for: "results" %>
          <%= form.text_area :results, class: "validate materialize-textarea", id: "results" %>
        </div>

        <div class="actions">
          <a class="waves-effect waves-light btn white-text left"> <%= form.submit%></a>
        </div>
        <div>
          <%= link_to projects_path, class: "waves-effect waves-light btn" do %>
            <span><i class="material-icons">navigate_before</i></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
  
<% end %>

